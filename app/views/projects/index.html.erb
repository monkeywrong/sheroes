<h1>Listing projects</h1>

<table>
	<% @projects.each do |project| %>
		<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
			<td class="list_description">
				<dl>
					<dt> <%= project.title %></dt>
					<dd> <%= truncate (strip_tags project.description), length: 50 %></dd>
				</dl>
			</td>
			<td> <%= project.headline %></td> <!-- headline -->
			<td> <%= project.current_team_size%> </td> <!-- current team size -->
			<td> <%= project.desired_team_size%> </td> <!-- desired team size -->
			<td class="list_actions">
				<%= link_to 'Show', project %><br/>
				<%= link_to 'Edit', edit_project_path(project) %><br/>
				<%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?'}%>
			</td>
				
		</tr>
	<% end %>
</table>>

